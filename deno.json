	},

	"imports": {
		"@invisement/husk": "jsr:@invisement/husk@^0.4.61",
		"@invisement/husk/": "jsr:@invisement/husk@^0.4.61/",

		"@viz-js/viz": "https://unpkg.com/@viz-js/viz@3.11.0/lib/viz-standalone.mjs",
		"codejar": "https://unpkg.com/codejar@4.2.0/dist/codejar.js"
	}
}